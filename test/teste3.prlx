This is program ExemploTres.

It presents:
    vector of number(2x2) Matriz;
    alterable number I_;
    alterable number j;
    alterable answer Controle;
    alterable number Soma;
    alterable answer Resultado;
    unalterable answer Verdade = yes;

Let us begin:
    I_ := 1;
    Soma := 0;

    show("Preencha a matriz 2x2:");

    considering I_ from 1 to 2 by 1 do [
        j := 1;
        considering j from 1 to 2 by 1 do [
            capture(Matriz(I_, j));
        ];
    ];

    I_ := 2;
    j := 2;

    as long as (I_ >= 1) do [
        as long as (j >= 1) do [
            if ((Matriz(I_, j) < 0) or !(Matriz(I_, j) >= 0)) then abandon;
            Soma := Soma + Matriz(I_, j);
            j := j - 1;
        ];
        I_ := I_ - 1;
        j := 2;
    ];

    Resultado := (Soma > 10) xor (Verdade == yes);

    just in case that (Resultado == yes) do [
        show("Soma relevante:", Soma);
    ] otherwise do [
        show("Soma baixa ou condição não exclusiva.");
    ];

    considering I_ from 5 to 1 by -1 do [
        if (I_ == 3) then go to next iteration;
        show("Contagem reversa:", I_);
    ];
That would be all.